.title{
  width:100%;
  background-color:#eee;
  height: 40px;
  line-height: 40px;
  color: #555;
  font-family: 微软雅黑;
  font-weight: 700;
  font-size: 14px;
  text-align: center;
  position: fixed;
}
.signContent{
  width: 90%;
  margin-left: 5%;
}
.sysTime{
  width: 100%;
  height: 30px;
  line-height: 30px;
  color: #ccc;
  font-size: 11px;
  text-align: center;
}
.signSingle{
  margin-top: 5px;
}
.className{
  width: 100%;
  height: 35px;
  line-height: 35px;
  border: 1px solid #ccc;
  box-sizing: border-box;
  clear: both;
  background-color: #eee;
  color: #000;
  font-family: 微软雅黑;
  font-size: 14px;
  border-radius: 10px 10px 0 0;
}
.className view:nth-child(1){
  width: 30%;
  text-align: center;
  float: left;
  box-sizing: border-box;
  border-right:  1px solid #ccc;
}
.className view:nth-child(2){
  width: 70%;
  text-align: center;
  float: left;
  box-sizing: border-box;
}
.classTime{
  width: 100%;
  height: 70px;
  border: 1px solid #ccc;
  box-sizing: border-box;  
  clear: both;
  color: #000;
  font-family: 微软雅黑;
  font-size: 14px;
  border-top: 0;
}
.classTime>view:nth-child(1){
  width: 30%;
  line-height: 70px;
  text-align: center;
  float: left;
  box-sizing: border-box;
  border-right:  1px solid #ccc;
}
.classTime>view:nth-child(2){
  width: 70%;
  text-align: center;
  float: left;
  box-sizing: border-box;
}
.classTime>view:nth-child(2)>view:nth-child(1){
  line-height: 25px;
  color: #555;
}
.classTime>view:nth-child(2)>view:nth-child(2){
  font-size: 25px;
  font-weight: 700;
  line-height: 45px;
}
